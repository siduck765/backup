! Set depth to make transparency work.
URxvt*depth: 32
!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

! -- Fonts -- !
  URxvt.font:xft:Hack Regular Nerd Font Complete:pixelsize=12.5
  URxvt.boldfont:xft:Hack Regular Nerd Font Complete:pixelsize=12.5


URxvt.letterSpace: -1

URxvt.internalBorder:  10
URxvt.tabbed.tabbar-fg: 4
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 2

! -- xterm config -- !

xterm*faceName: Bitstream Vera Sans Mono Nerd Font Complete


xterm*faceSize: 10
xterm*renderFont: true
 
XTerm*selectToClipboard: true
